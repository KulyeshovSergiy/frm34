{% extends '@App/layout.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <main class="form-signin">
        <form action="{{ path('login') }}" method="post">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
            <label for="inputEmail" class="visually-hidden">Email address</label>
            <input type="text" id="username" name="_username" class="form-control" placeholder="Username" required autofocus value="{{ last_username }}"/>
{#<input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus value="{{ last_username }}">#}
            <label for="inputPassword" class="visually-hidden">Password</label>
            <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

        </form>
    </main>

{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/app/css/signin.css') }}" rel="stylesheet">
{% endblock %}
