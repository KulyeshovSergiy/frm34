{% extends '@App/layout.html.twig' %}

{% block body %}
{% if forum %}

    <div class="py-5 text-center">
        <h2>{{ forum.title }}</h2>
    </div>

{% endif %}

{% if itemslist %}
    {% for item in itemslist %}
        {% if item.title and item.id %}
            <div class="row mb-3">
                <div class="col-md-8 themed-grid-col">
                    <a class="nav-link" href="{{ path('topic',{topicid: item.id} )}}">{{ item.title  }}</a>
                </div>
                {#  <div class="col-md-4 themed-grid-col">{{ item.id }}</div>#}
            </div>

        {% endif %}
    {% endfor %}
{% endif %}

    {% if app.user!=null and newtopic_form != null %}
        {{ form_start(newtopic_form) }}
        <div class="form_group">
            <div class="col-md-12 mb-3">
                {{ form_row(newtopic_form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-btn fa-plus"></i> Create new
                </button>
            </div>
        </div>
        {{ form_end(newtopic_form) }}
    {% endif %}


{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/app/css/grid.css') }}" rel="stylesheet">
{% endblock %}